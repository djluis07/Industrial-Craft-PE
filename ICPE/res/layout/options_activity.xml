<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbars="vertical"
		android:scrollbarThumbVertical="@drawable/scroll_bar">

		<LinearLayout
			xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="148dp">

				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="128dp"
					android:background="#2D83CB"
					android:paddingBottom="20dp"
					android:paddingLeft="100dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentBottom="true"
						android:layout_marginLeft="0dp"
						android:text="@string/menu"
						android:textSize="25dp"/>

				</RelativeLayout>

				<View
					android:layout_width="fill_parent"
					android:layout_height="2dp"
					android:layout_marginTop="128dp"
					android:background="#88CECECE"/>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="48dp"
				android:layout_marginLeft="50dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="@string/menu"/>

				<View
					android:layout_width="fill_parent"
					android:layout_height="1dp"
					android:layout_alignParentBottom="true"
					android:background="#1E88E5"/>

			</RelativeLayout>

			<com.gc.materialdesign.views.LayoutRipple
				android:layout_width="fill_parent"
				android:layout_height="64dp"
				android:clickable="true"
				android:onClick="openSettings">

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="32dp"
					android:src="@drawable/ic_settings_black"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="104dp"
					android:text="@string/settings"/>

			</com.gc.materialdesign.views.LayoutRipple>

			<com.gc.materialdesign.views.LayoutRipple
				android:layout_width="fill_parent"
				android:layout_height="64dp"
				android:clickable="true"
				android:onClick="openJoin">

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="32dp"
					android:src="@drawable/ic_account_child_black"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="104dp"
					android:text="@string/join_us"/>

			</com.gc.materialdesign.views.LayoutRipple>

			<com.gc.materialdesign.views.LayoutRipple
				android:layout_width="fill_parent"
				android:layout_height="64dp"
				android:clickable="true"
				android:onClick="openEula">

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="32dp"
					android:src="@drawable/ic_assignment_black"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="104dp"
					android:text="@string/user_legal"/>

			</com.gc.materialdesign.views.LayoutRipple>

			<com.gc.materialdesign.views.LayoutRipple
				android:layout_width="fill_parent"
				android:layout_height="64dp"
				android:clickable="true"
				android:onClick="openUpdate">

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_centerVertical="true"
					android:layout_marginLeft="32dp"
					android:src="@drawable/ic_get_app_black"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="104dp"
					android:text="@string/update"/>

			</com.gc.materialdesign.views.LayoutRipple>

		</LinearLayout>

	</ScrollView>

</RelativeLayout>

