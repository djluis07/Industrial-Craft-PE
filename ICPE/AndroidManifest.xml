<?xml version="1.0" encoding="utf-8"?>
<manifest 
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.MCAL.ICPE"
    android:versionCode="1"
	android:versionName="@string/app_version">
	
	<uses-permission 
		android:name="android.permission.INTERNET" />
    <uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
		android:name="android.permission.VIBRATE" />
    <uses-permission
		android:name="android.permission.ACCESS_SUPERUSER" />
    <uses-permission
		android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
		android:name="net.zhuoweizhang.mcpelauncher.ADDON"/>
	<uses-permission
		android:name="android.permission.GET_ACCOUNTS" />
	<uses-feature
		android:name="android.hardware.microphone" android:required="false" />
    <uses-sdk
		android:minSdkVersion="9" />
    
	<application 
		android:label="@string/app_name"
		android:largeHeap="true"
		android:icon="@drawable/icon" >
		
		<meta-data
			android:name="net.zhuoweizhang.mcpelauncher.api.nativelibname"
			android:value="icpe_core"/>

		<meta-data 
			android:name="net.zhuoweizhang.mcpelauncher.api.targetmcpeversion"
			android:value="0.17.0.2"/>
		
        <activity 
			android:name="com.MCAL.ICPE.activity.MainActivity"
			android:theme="@style/AppTheme"
			android:screenOrientation="landscape"
            android:label="@string/app_name">
        </activity>
		
		<activity
			android:name="com.MCAL.ICPE.activity.LicenseActivity"
			android:theme="@style/AppTheme"
			android:screenOrientation="landscape">
        </activity>
		
		<activity
			android:name="com.MCAL.ICPE.activity.StartActivity"
			android:theme="@style/FullScreen"
			android:screenOrientation="landscape">
        </activity>
		
		<activity
			android:name="com.MCAL.ICPE.activity.GuideActivity"
			android:theme="@style/FullScreen"
			android:screenOrientation="landscape"
			android:label="@string/app_name">
			
            <intent-filter>
                <action
					android:name="android.intent.action.MAIN" />
                <category
					android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
			
        </activity>
		
		<activity
			android:name="com.MCAL.ICPE.activity.LauncherActivity"
			android:theme="@*android:style/Theme.NoTitleBar.Fullscreen"
			android:label="@string/app_name"
			android:debuggable="false"
			android:excludeFromRecents="false"
			android:launchMode="singleTask"
			android:screenOrientation="sensorLandscape"
			android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale"
			android:alwaysRetainTaskState="true">
			
			<meta-data
				android:name="android.app.lib_name"
				android:value="icpe_api"/>
			
        </activity>
		
    </application>
	
</manifest> 
